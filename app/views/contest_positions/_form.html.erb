<%= simple_form_for @contest_position, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :contest_id %>
  <%= f.input :position_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                contest_positions_path, :class => 'btn' %>
  </div>
<% end %>
