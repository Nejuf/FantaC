- model_class = PayoutType
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @payout_types.each do |payout_type|
      %tr
        %td= link_to payout_type.id, payout_type_path(payout_type)
        %td= payout_type.name
        %td= l payout_type.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")),     |
            edit_payout_type_path(payout_type), :class => 'btn btn-mini' |
          -#
          = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
            payout_type_path(payout_type),                                                                               |
            :method => :delete,                                                                                          |
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
            :class => 'btn btn-mini btn-danger'
= link_to t('.new', :default => t("helpers.links.new")), |
  new_payout_type_path,                                  |
  :class => 'btn btn-primary'                            |
