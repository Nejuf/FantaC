- model_class = Portrait
.page-header
  %h1= t '.title', :default => @portrait.character.name + " "+model_class.model_name.human.titleize
/
  <dl class="dl-horizontal">
  <dt><strong><haml_loud> model_class.human_attribute_name(:focusX) </haml_loud>:</strong></dt>
  <dd><haml_loud> @portrait.focusX </haml_loud></dd>
  <dt><strong><haml_loud> model_class.human_attribute_name(:focusY) </haml_loud>:</strong></dt>
  <dd><haml_loud> @portrait.focusY </haml_loud></dd>
  <dt><strong><haml_loud> model_class.human_attribute_name(:character_id) </haml_loud>:</strong></dt>
  <dd><haml_loud> @portrait.character_id </haml_loud></dd>
  <dt><strong><haml_loud> model_class.human_attribute_name(:portrait_image_file_name) </haml_loud>:</strong></dt>
  <dd><haml_loud> @portrait.portrait_image_file_name </haml_loud></dd>
  <dt><strong><haml_loud> model_class.human_attribute_name(:portrait_image_content_type) </haml_loud>:</strong></dt>
  <dd><haml_loud> @portrait.portrait_image_content_type </haml_loud></dd>
  <dt><strong><haml_loud> model_class.human_attribute_name(:portrait_image_file_size) </haml_loud>:</strong></dt>
  <dd><haml_loud> @portrait.portrait_image_file_size </haml_loud></dd>
  <dt><strong><haml_loud> model_class.human_attribute_name(:portrait_image_updated_at) </haml_loud>:</strong></dt>
  <dd><haml_loud> @portrait.portrait_image_updated_at </haml_loud></dd>
  <dt><strong><haml_loud> model_class.human_attribute_name(:image_width) </haml_loud>:</strong></dt>
  <dd><haml_loud> @portrait.image_width </haml_loud></dd>
  <dt><strong><haml_loud> model_class.human_attribute_name(:image_height) </haml_loud>:</strong></dt>
  <dd><haml_loud> @portrait.image_height </haml_loud></dd>
  </dl>
= @portrait.image_tag.html_safe
= @portrait.image_tag(:medium).html_safe
= @portrait.image_tag(:large).html_safe
= @portrait.image_tag(:profile).html_safe
.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), |
    portraits_path, :class => 'btn'                          |
  -#
  = link_to t('.edit', :default => t("helpers.links.edit")), |
    edit_portrait_path(@portrait), :class => 'btn'           |
  -#
  = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
    portrait_path(@portrait),                                                                                    |
    :method => 'delete',                                                                                         |
    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
    :class => 'btn btn-danger'                                                                                   |
