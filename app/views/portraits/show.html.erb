<%- model_class = Portrait -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:focusX) %>:</strong></dt>
  <dd><%= @portrait.focusX %></dd>
  <dt><strong><%= model_class.human_attribute_name(:focusY) %>:</strong></dt>
  <dd><%= @portrait.focusY %></dd>
  <dt><strong><%= model_class.human_attribute_name(:character_id) %>:</strong></dt>
  <dd><%= @portrait.character_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:portrait_image_file_name) %>:</strong></dt>
  <dd><%= @portrait.portrait_image_file_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:portrait_image_content_type) %>:</strong></dt>
  <dd><%= @portrait.portrait_image_content_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:portrait_image_file_size) %>:</strong></dt>
  <dd><%= @portrait.portrait_image_file_size %></dd>
  <dt><strong><%= model_class.human_attribute_name(:portrait_image_updated_at) %>:</strong></dt>
  <dd><%= @portrait.portrait_image_updated_at %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image_width) %>:</strong></dt>
  <dd><%= @portrait.image_width %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image_height) %>:</strong></dt>
  <dd><%= @portrait.image_height %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              portraits_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_portrait_path(@portrait), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              portrait_path(@portrait),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
