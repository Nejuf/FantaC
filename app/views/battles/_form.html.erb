<%= simple_form_for @battle, :html => { :class => 'form-horizontal' } do |f| %>
<%= f.error_notification %>
  <%= f.input :name %>
  <%= f.input :desc %>
  <%= f.input :start_date %>
  <%= f.input :end_date %>
  <%= f.input :user_id %>
  <%= f.error :base %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                battles_path, :class => 'btn' %>
  </div>
<% end %>
