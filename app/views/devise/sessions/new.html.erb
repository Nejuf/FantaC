<div class="border-form-div">
	<h2>Sign in</h2>

	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div class="form-inputs">
	    <%= f.input :email, :autofocus => true, placeholder: "E-mail address", label: false %>
	    <%= f.input :password, placeholder: "Password", label: false %>
	    <%= f.input :remember_me, :as => :boolean, label: false, inline_label: "Remember me" if devise_mapping.rememberable? %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Sign in", class: "btn btn-primary" %>
	  </div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>