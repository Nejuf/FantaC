<%- model_class = Contest -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @contest.name %></dd>
  <dt><strong>Description:</strong></dt>
  <dd><%= @contest.desc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:points_cap) %>:</strong></dt>
  <dd><%= @contest.points_cap %></dd>
  <dt><strong><%= model_class.human_attribute_name(:entry_fee) %>:</strong></dt>
  <dd><%= @contest.entry_fee %></dd>
  <dt><strong><%= model_class.human_attribute_name(:payout_type_id) %>:</strong></dt>
  <dd><%= @contest.payout_type.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category_id) %>:</strong></dt>
  <dd><%= @contest.category.name %></dd>
  <dt><strong>Creator:</strong></dt>
  <dd><%= @contest.user ? @contest.user.username : "???" %></dd>
  <dt><strong>Battle:</strong></dt>
  <dd><%= link_to @contest.battle.name, battle_path(@contest.battle) %></dd>
  <dt><strong>Positions:</strong></dt>
  <dd>
    <ul>
      <% @contest.positions.each do |position| %>
        <li><%= position.name %></li>
      <% end %>
    </ul>
  </dd>

</dl>

<div class="form-actions">
<%= link_to "Enter", new_entry_path(contest_id: @contest.id), class: 'btn btn-primary btn-large' %>
  <%= link_to t('.back', :default => t("helpers.links.back")),
              contests_path, :class => 'btn'  %>

  <% if can? :update, @contest %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_contest_path(@contest), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                contest_path(@contest),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  <% end %>
</div>
