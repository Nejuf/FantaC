<%= simple_form_for @contest, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :desc %>
  <%= f.input :points_cap %>
  <%= f.input :entry_fee %>
  <%= f.input :payout_type_id %>
  <%= f.input :payout_amount %>
  <%= f.input :category_id %>
  <%= f.input :user_id %>
  <%= f.input :battle_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                contests_path, :class => 'btn' %>
  </div>
<% end %>
