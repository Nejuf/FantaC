- @entry.contest ||= @contest
= simple_form_for @entry, :html => { :class => 'form-horizontal' } do |f|
  = f.error_notification
  = f.input :name, label: "Team Name"
  = f.input :desc, label: "Description"
  / <label class="text">Positions</label>
  - @entry.contest.positions.each do |position|
    = f.association :characters, label: position.name
  = f.error :base
  %input{name: "entry[contest_id]", type: "hidden", value: params[:contest_id]}/
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), |
      entries_path, :class => 'btn'                                |
