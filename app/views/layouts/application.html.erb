<!DOCTYPE html>
<html>
<head>
  <title>Fantac</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= nav_bar static: :top, brand: "FantaC", brand_link: "/", responsive: true do%>
    <%= menu_group do %>
      <%= menu_item "Battles", battles_path %>
      <%= menu_item "Contests", contests_path %>
      <%= menu_item "Characters", characters_path %>
      <%= menu_item "My Entries", entries_path %>
      <%= menu_divider %>
      <%= menu_item "My Account", edit_user_registration_path %>
    <% end %>
    <%= menu_group pull: :right do %>
      <% if current_user %>
        <%= menu_item "Sign Out", destroy_user_session_path %>
      <% elsif false %>
        <% @user ||= User.new %>
        <%= form_for @user, url: user_session_path(:user), html: {class: "navbar-form pull-right"} do |f| -%>
          <p><%= f.text_field :email %></p>
          <p><%= f.password_field :password %></p>
          <p><%= f.submit "Sign in" %></p>
        <% end -%>
      <% end %>
    <% end %>
  <% end %>
  <%= bootstrap_flash %>

<%= yield %>

</body>
</html>
