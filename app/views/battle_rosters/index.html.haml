- model_class = BattleRoster
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:battle_id)
      %th= model_class.human_attribute_name(:character_id)
      %th= model_class.human_attribute_name(:character_points)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @battle_rosters.each do |battle_roster|
      %tr
        %td= link_to battle_roster.id, battle_roster_path(battle_roster)
        %td= battle_roster.battle_id
        %td= battle_roster.character_id
        %td= battle_roster.character_points
        %td= l battle_roster.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_battle_roster_path(battle_roster), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")),
                      battle_roster_path(battle_roster),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")),
            new_battle_roster_path,
            :class => 'btn btn-primary'
