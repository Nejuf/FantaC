<%- model_class = Character -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @character.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:desc) %>:</strong></dt>
  <dd><%= @character.desc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @character.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:affinity_id) %>:</strong></dt>
  <dd><%= @character.affinity_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tier_id) %>:</strong></dt>
  <dd><%= @character.tier_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stat_hp) %>:</strong></dt>
  <dd><%= @character.stat_hp %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stat_str) %>:</strong></dt>
  <dd><%= @character.stat_str %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stat_def) %>:</strong></dt>
  <dd><%= @character.stat_def %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stat_spd) %>:</strong></dt>
  <dd><%= @character.stat_spd %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stat_int) %>:</strong></dt>
  <dd><%= @character.stat_int %></dd>
  <dt><strong><%= model_class.human_attribute_name(:stat_luck) %>:</strong></dt>
  <dd><%= @character.stat_luck %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              characters_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_character_path(@character), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              character_path(@character),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

<%= @character.image_tag %>